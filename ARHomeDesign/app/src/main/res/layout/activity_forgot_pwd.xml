<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPwdActivity"
    android:background="@drawable/intro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/rounded_transparent"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alegreya_sans"
            android:text="@string/fgtPwd"
            android:textAlignment="center"
            android:textColor="@color/dark_beige"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/alegreya_sans"
            android:text="Enter your email to reset your password"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_beige"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_transparent"
            android:backgroundTint="@color/beige"
            android:ems="15"
            android:fontFamily="@font/alegreya_sans"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textSize="22sp" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:background="@drawable/rounded_transparent"
            android:backgroundTint="@color/dark_beige"
            android:fontFamily="@font/alegreya_sans"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alegreya_sans"
            android:background="@drawable/line"
            android:backgroundTint="@color/dark_beige"
            android:text="@string/cancel"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_beige"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>