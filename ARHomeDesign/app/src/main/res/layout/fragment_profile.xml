<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_main"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/kaiu"
        android:text="@string/profile"
        android:textSize="40sp"
        android:textColor="@color/matte_black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/baseline_person_24"
            android:background="#6B6B6B"
            android:contentDescription="@null"/>

        <LinearLayout
            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="@drawable/elevated_rectangle_10"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/kaiu"
                android:textColor="#6B6B6B"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/baseline_arrow_forward_ios_24"
                android:contentDescription="@null"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/baseline_email_24"
            android:contentDescription="@null"/>

        <LinearLayout
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="@drawable/elevated_rectangle_10"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/kaiu"
                android:textColor="#6B6B6B"
                android:textSize="28sp"
                android:textStyle="bold"  />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chgPw"
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:background="@drawable/elevated_rectangle_10"
        android:backgroundTint="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/kaiu"
            android:text="@string/chgPw"
            android:textColor="#6B6B6B"
            android:textSize="28sp"
            android:textStyle="bold"  />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/baseline_arrow_forward_ios_24"
            android:contentDescription="@null"/>

    </LinearLayout>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:background="@drawable/elevated_rectangle_15"
        android:backgroundTint="@color/red_btn"
        android:fontFamily="@font/kaiu"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp" />


</LinearLayout>