@model ARHome.Models.Furniture

@{
    ViewData["Title"] = "顯示家具明細";
}
<style>
    dl {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        list-style: none;
        padding: 0;
    }

    dt {
        width: 100%;
        text-align: left;
        padding-right: 10px;
        box-sizing: border-box;
    }

    /* 若需更精細的樣式，可根據需求進行調整 */
</style>


<h3><span class="badge rounded-pill bg-info">顯示家具明細操作頁面</span></h3>
<br />

<div class="container">
    <div class="row col-md-12">
        <div class="col-md-6">
            <div onclick="toggleFavorite('@Model.furnitureId')" data-furniture-id="@Model.furnitureId" style="text-align: right;">
                <i class="fa fa-heart"></i>
            </div>
            <div>
                <img src="http://140.137.41.136:1380/A01Web/Images/@Model.picture" style="width: 100%; height:auto;" alt="@Model.picture" />
            </div>
            
            <dl>
                <dt>
                    <b><label asp-for="type" class="text-primary"></label></b>: <span>@Model.type</span>
                </dt>
                <dt>
                    <b><label asp-for="color" class="text-primary"></label></b>: <span>@Model.color</span>
                </dt>
                <dt>
                    <b><label asp-for="style" class="text-primary"></label></b>: <span>@Model.style</span>
                </dt>
                <dt>
                    <b><label asp-for="brand1" class="text-primary"></label></b>: <span>@Model.brand1</span>
                </dt>
                <dt>
                    <b><label asp-for="phoneNumber" class="text-primary"></label></b>: <span>@Model.phoneNumber</span>
                </dt>
                <dt>
                    <b><label asp-for="address" class="text-primary"></label></b>: <span>@Model.address</span>
                </dt>
            </dl>
            


        </div>
        <div class="col-md-6">
            <div id="buttonContainer">
                <button id="button">查看模型</button>
            </div>
            <div id="view3dContainer" style="display:none; width: 100%; height: 500px;">
                <iframe frameborder="0"
                        noresize="noresize"
                        style="background: transparent; height:100%; width:100%"
                        src="https://app.vectary.com/p/43JmomPxH6MUp0cbfThcCq">
                </iframe>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-info btn-sm">回到家具網站首頁</a>
</div>

<script>
    document.getElementById('button').addEventListener('click', function () {
        document.getElementById('buttonContainer').style.display = 'none';
        document.getElementById('view3dContainer').style.display = 'block';
    });

    function toggleFavorite(furnitureId) {
        console.log(furnitureId);
        $.ajax({
            type: "GET",
            url: '@Url.Action("ToggleFavorite", "Favorites")',
            data: { furnitureId: furnitureId },
            success: function (response) {
                if (response.success) {
                    console.log(response.message);
                    alert(response.message);
                }
                else {
                    alert(response.message); // 在用戶未登入時也顯示訊息
                    window.location.href = '@Url.Action("SignIn", "Home")';
                }
            },
            error: function () {
                alert("請求失敗");
            }
        });
    }


</script>
