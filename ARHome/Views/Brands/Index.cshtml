@model IEnumerable<ARHome.Models.Brand>

@{
    ViewData["Title"] = "品牌資訊首頁";
}

<style>

    /* 連結的樣式 */
    .card-link {
        text-decoration: none;
        color: inherit; /* 繼承父元素的顏色 */
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    /* <h1>元素的樣式 */
    .card-title {
        font-size: 24px; /* 調整字體大小 */
        margin: 0; /* 清除標題的預設邊距 */
        padding: 10px; /* 添加一些內間距 */
    }

    .card-img {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        min-height: 300px;
        overflow: hidden; /* 隱藏溢出的部分 */
    }

        .card-img img {
            width: 100%;
            height: auto;
            max-width: 100%; /* 設置最大寬度 */
        }
</style>

<h3><span class="badge rounded-pill bg-info">品牌資訊首頁</span></h3>
<br />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-4 col-6">
                <a asp-action="Details" asp-route-id="@item.brandId" class="card-link">
                    <div class="card" style="margin-bottom:5px;">
                        <div class="card-body d-flex flex-column">
                            <div class="card-img">
                                <img src="http://140.137.41.136:1380/A01Web/Images/@item.logo" alt="@item.logo" />
                            </div>
                            <h1 class="card-title">@item.brand1</h1>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>